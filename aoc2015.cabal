name:                aoc2015
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/ephemient/aoc2015#readme
license:             MIT
license-file:        LICENSE
author:              Daniel Lin
maintainer:          ephemient@gmail.com
copyright:           2017 Daniel Lin
--category:
build-type:          Simple
extra-source-files:  README.md
data-files:          day1.txt, day2.txt
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Day1, Day2
  ghc-options:         -pgmL markdown-unlit
  build-depends:       base >= 4.7 && < 5
                     , markdown-unlit
                     , mtl
                     , parsec
  default-language:    Haskell2010

executable aoc2015-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , aoc2015
  default-language:    Haskell2010

test-suite aoc2015-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Main.hs
  build-depends:       base
                     , aoc2015
                     , hspec
  other-modules:       Day1Spec, Day2Spec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/ephemient/aoc2015
